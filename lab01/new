//codeforce

//problem no-02
//problem name-Way _Too_Long_Words.cpp
#include <iostream>

using namespace std;

int main()
{
    int n;
    cin>>n;
    while(n--)
    {
        string s;
        cin>>s;
        int size=s.size();
        if(size>10)
        {
            cout<<s[0]<<size-2<<s[size-1]<<endl;

        }
        else{cout<<s<<endl;
        }
    }
    return 0;
}
